[paths]
db = %(APP_ROOT)s/data/eplus_vc.sqlite3
out_dir = %(APP_ROOT)s/out
logs = %(APP_ROOT)s/logs
static = %(APP_ROOT)s/static

[resolver]
host = 0.0.0.0
port = 8094
slate_url = http://localhost:8888/slate.html

[planner]
valid_hours = 72
tz = America/New_York
min_gap_mins = 5
lanes = 40
chno_start = 20010
group_name = ESPN+ VC

[outputs]
xmltv = %(paths.out_dir)s/virtual_channels.xml
m3u   = %(paths.out_dir)s/virtual_channels.m3u
resolver_base = http://localhost:8094
