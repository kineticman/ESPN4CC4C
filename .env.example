# ESPN4CC4C Environment Configuration
# Copy to .env and customize as needed

# ------------------------------------------
# Core Configuration
# ------------------------------------------
DB=/app/data/eplus_vc.sqlite3
OUT=/app/out
TZ=America/New_York
PORT=8094

# Channel configuration
LANES=40
EPLUS_LCN_BASE=20010

# Plan configuration
VALID_HOURS=72
ALIGN=30
MIN_GAP_MINS=30

# ------------------------------------------
# Resolver Base URL
# ------------------------------------------
# Base URL for the virtual channel resolver
# Used by all M3U formats (CC, CH4C, PrismCast)
VC_RESOLVER_BASE_URL=http://127.0.0.1:8094

# ------------------------------------------
# Chrome Capture (CC) Configuration
# ------------------------------------------
# Standard Chrome Capture proxy
CC_HOST=127.0.0.1
CC_PORT=5589

# ------------------------------------------
# Channels4Chrome (CH4C) Configuration
# ------------------------------------------
# Alternative HTTP-based proxy
CH4C_HOST=127.0.0.1
CH4C_PORT=2442

# ------------------------------------------
# PrismCast Configuration (BETA)
# ------------------------------------------
# Optional: Enables PrismCast M3U output (playlist.prismcast.m3u)
# PrismCast supports auto-launching native apps (ESPN, WatchESPN, etc)
# PCAST_SERVER = host/IP where PrismCast is running
# PCAST_PORT   = port PrismCast listens on (commonly 5589)
PCAST_SERVER=127.0.0.1
PCAST_PORT=5589

# ------------------------------------------
# Event Padding Configuration
# ------------------------------------------
# Add extra time before/after events
PADDING_START_MINS=0
PADDING_END_MINS=0
PADDING_LIVE_ONLY=true

# ------------------------------------------
# Auto-refresh on Filter Changes
# ------------------------------------------
AUTO_FORCE_REPLAN_ON_FILTER_CHANGE=true
AUTO_RESET_DB_ON_FILTER_CHANGE=false

# ------------------------------------------
# M3U Cosmetics
# ------------------------------------------
M3U_GROUP_TITLE=ESPN+ VC
