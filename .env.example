# --- Service ---
PORT=8094
TZ=America/New_York

# --- Paths inside container ---
DB=/app/data/eplus_vc.sqlite3
OUT=/app/out/epg.xml
VC_M3U_PATH=/app/out/virtual_channels.m3u

# --- Planner tunables ---
VALID_HOURS=72
LANES=40
ALIGN=30
MIN_GAP_MINS=30

# --- Resolver base URL (set to your LAN IP) ---
VC_RESOLVER_BASE_URL=http://YOUR_LAN_IP:8094

# --- Chrome Capture integration (optional) ---
CC_HOST=YOUR_LAN_IP
CC_PORT=5589
M3U_GROUP_TITLE=ESPN+ VC

# --- FastAPI app module (older entrypoints use this) ---
APP_MODULE=bin.vc_resolver:app
